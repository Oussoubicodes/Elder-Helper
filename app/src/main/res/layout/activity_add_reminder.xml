<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFF814"
    tools:context=".AddReminder">

    <Button
        android:id="@+id/setReminder"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:text="Set Reminder"
        android:textSize="18sp"
        app:backgroundTint="#51035E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="Reminder"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setReminder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/medicine" />

            <EditText
                android:id="@+id/medicine"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Medicine Name"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/calendar_icon" />

            <TextView
                android:id="@+id/days"
                android:layout_width="290dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Days"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/clock_icon" />

            <TimePicker
                android:layout_width="350dp"
                android:layout_height="360dp"
                android:headerBackground="#51035E"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="336dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/goBack"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Go back"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:backgroundTint="#C5BDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/finishReminder"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:text="Finish Reminder"
        android:textSize="18sp"
        app:backgroundTint="#51035E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/cancelReminder"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Cancel Reminder"
        android:textSize="18sp"
        app:backgroundTint="#51035E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


</androidx.constraintlayout.widget.ConstraintLayout>